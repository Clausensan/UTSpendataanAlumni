<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".TambahDataActivity">

    <EditText
        android:id="@+id/etNim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="NIM" />

    <EditText
        android:id="@+id/etNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama Alumni" />

    <EditText
        android:id="@+id/etTempatLahir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tempat Lahir" />

    <EditText
        android:id="@+id/etTanggalLahir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tanggal Lahir"
        android:focusable="false" />

    <EditText
        android:id="@+id/etAlamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Alamat" />

    <EditText
        android:id="@+id/etAgama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Agama" />

    <EditText
        android:id="@+id/etNoTelepon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="No Telepon" />

    <EditText
        android:id="@+id/etTahunMasuk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tahun Masuk" />

    <EditText
        android:id="@+id/etTahunLulus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tahun Lulus" />

    <EditText
        android:id="@+id/etPekerjaan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pekerjaan" />

    <EditText
        android:id="@+id/etJabatan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Jabatan" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simpan" />
</LinearLayout>
